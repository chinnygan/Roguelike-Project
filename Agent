//A base class for the agents(Player and Monsters)
//Will most likely be changed a lot
//It's not as lovely as it needs to be

public class Agent {

  private int xpos;
	private int ypos;
 
	//Creates an agent with x & y position, possibly not going to be used
	public Agent(int xPosition, int yPosition) {
		xpos = xPosition;
		ypos = yPosition;
	}
	
	//Set values for x & y
	public void setX(int x) {
		xpos = x;
	}
	
	public void setY(int y) {
		ypos = y;
	}

	//Retrieve values for x & y
	public int getX() {
		return xpos;
	}

	public int getY() {
		return ypos;
	}

	//Movement of the agent
	public int moveUp() {
		return ypos--;
	}

	public int moveDown() {
		return ypos++;
	}

	public int moveRight() {
		return xpos++;
	}

	public int moveLeft() {
		return xpos--;
	}

}
