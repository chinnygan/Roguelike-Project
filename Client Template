Public Class Client implements KeyListener {
	Public Static void main(String[] args) {
		ArrayList<Board> boards = new ArrayList<Board>();
		ArrayList<Monster> monsters = new ArrayList<Monster>();
		int currentboard = 0;
		boolean alive = true;
		newBoard();
		initiate();

		//creates new board in boards list i.e. adds a new floor to dungeon
		Public void newBoard() {
			boards.add(new Board());
		}

		//adds a monster to the monsters list, does not place it anywhere.
		Public void newMonsters() {
			monsters.add(randomMonster);
		//will actually need to calcualte whether or not the monster is appropriate for the player to fight

		//sets the player's position on the current floor. To be called before play starts or
		//all sorts of shit will go down
		public void initiate() {
			int tempx, tempy;
			boolean b = false;

			do {
				tempx = (int) Math.floor(Math.random * boards.get(currentboard).getxlimit());
				tempy = (int) Math.floor(Math.random * boards.get(currentboard).getylimit());
				if (boards.get(currentboard).getTileType(tempx,tempy) == '~') {
					b = true;
				}
			} while (b == false);
		}

		//gets actions until player is dead
		do {
			//get player action
			for (Monster b: monsters) {
				//get monster b action
			}
		} while (alive == true)
}
